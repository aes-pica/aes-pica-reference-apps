<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:cxf="http://camel.apache.org/schema/cxf"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        
	http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


	<!-- ================================================================= -->
	<!-- INTEGRATION AND COMPOSITION -->
	<!-- ================================================================= -->

	<camel:routeContext id="composiciones-route-context"
		xmlns:ns1="http://aes-pica-javeriana/enterprise-model/framework/domain-events/1.0.0"
		xmlns:ns11="http://aes-pica-javeriana/enterprise-model/framework/common-artifacts/1.0.0"
		xmlns:ns12="http://aes-pica-javeriana/enterprise-model/framework/entities/1.0.0">

		<camel:route id="composicion-poc-sms">
			<camel:from uri="direct:composicion-poc-sms" />
			<camel:log message="Reciviendo solicitud de procesamiento en servicio composicion composicion-poc-sms con mensaje: ${body}" />

			<camel:split>
				<camel:xpath>/ns1:PublishNotificationDomainEvent/ns1:notification</camel:xpath>
				<camel:log message="Token obtenido al dividir notificaciones: ${body}" />
				<camel:to uri="direct:adaptador-canonico-sms" />
			</camel:split>

			<camel:to uri="direct:adaptador-canonico-mainframe-tcpip" />

		</camel:route>

	</camel:routeContext>

</beans>